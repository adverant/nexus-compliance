  "compliance": {
    "gdprCompliant": true,
    "dataResidency": ["eu", "us"],
    "certifications": ["ISO27001", "SOC2-Type2"],
    "dataProcessingAgreement": true,
    "subProcessors": [
      {
        "name": "Anthropic",
        "purpose": "AI-powered compliance assessment",
        "location": "US"
      }
    ]
  },
  "integrations": {
    "nexusServices": [
      "nexus-graphrag",
      "nexus-mageagent"
    ],
    "externalServices": [
      "anthropic-api"
    ]
  },
  "ui": {
    "dashboardWidget": true,
    "settingsPanel": true,
    "reportViewer": true
  }
}
